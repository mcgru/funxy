// Test Records (Structs)

type Point = { x: Int, y: Int }

p = { x: 10, y: 20 }
print(p.x)
print(p.y)

// Mutation
p.x = 100
print(p.x)

// Type checking should work
// p.x = true // Should be error in Analyzer

// Nested records
type Rect = { tl: Point, br: Point }
r = { tl: p, br: { x: 50, y: 60 } }
print(r.br.y)

// Mutation nested
r.tl.y = 200
print(r.tl.y)
// Check reference semantic (p was mutated via r.tl)
print(p.y)

