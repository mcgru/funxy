// Test clockMs() - monotonic
t1 = clockMs()
t2 = clockMs()
print(t2 >= t1)  // true (monotonic)

// Test clockNs() - monotonic
n1 = clockNs()
n2 = clockNs()
print(n2 >= n1)  // true (monotonic)

// Test clockNs precision (should be more precise than clockMs)
// Multiple clockNs calls should show different values
ns1 = clockNs()
ns2 = clockNs()
ns3 = clockNs()
// At least some should be different (very likely)
print(ns2 >= ns1 && ns3 >= ns2)  // true

// Test sleepMs (short delay)
before = clockMs()
sleepMs(50)  // 50 ms
after = clockMs()
elapsed = after - before
print(elapsed >= 40)  // true (at least ~40ms passed, allowing some slack)

