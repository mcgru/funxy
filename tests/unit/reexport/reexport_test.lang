package main

import "lib/test" (*)
import "./reexport_all" (*)
import "./reexport_selective" as sel

// Test: reexport all symbols with source(*)
testRun("reexport all", fun() -> {
    // Local function from reexport_all
    assert(double(5.0) == 10.0, "double function")
    
    // Re-exported from source via source(*)
    c = Circle(2.0)
    assert(area(c) > 12.0, "Circle area")
    
    s = Square(3.0)
    assert(area(s) == 9.0, "Square area")
})

// Test: selective reexport with source(Circle, area)
testRun("reexport selective", fun() -> {
    // Local function from reexport_selective
    assert(sel.triple(4.0) == 12.0, "triple function")
    
    // Re-exported Circle and area
    c = sel.Circle(1.0)
    assert(sel.area(c) > 3.0, "Circle area via selective")
})
