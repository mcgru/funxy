testRun("Chaining >>= operations", fun() -> {
    step1 = Success(1) >>= fun(a) -> Success(a + 1)
    step2 = step1 >>= fun(b) -> Success(b * 2)
    result = step2 >>= fun(c) -> Success(c + 10)
    assertEquals(result, Success(14))  // ((1 + 1) * 2) + 10 = 14
